{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "../dist-electron",
        "rootDir": ".",
        "declaration": false,
        "noEmit": false
    },
    "include": [
        "./**/*.ts"
    ]
}